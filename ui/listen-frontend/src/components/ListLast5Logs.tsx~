import { useQuery } from "@tanstack/react-query";

const runCustomSQL = async ({ queryKey }: { queryKey: [string, string] }) => {
  const [, sqlQuery] = queryKey;
  const response = await fetch(`../api/logs/custom?q=${encodeURIComponent(sqlQuery)}`);
  if (!response.ok) throw new Error('Failed to run SQL!');
  return response.json();
};

function ListLast5Logs() {
  const sqlQuery =
    `SELECT ts AS "Time", remote_addr AS "Client IP", realip AS "Real IP", request_method AS "Method", request_uri AS "URI", status AS "Status", body_bytes_sent AS "Bytes Sent", request_time AS "Response Time (s)", upstream_addr AS "Upstream Server", upstream_status AS "Upstream Status", gzip_ratio AS "Gzip Ratio", h_user_agent AS "User Agent", h_referer AS "Referer" FROM nginxlogs ORDER BY ts DESC LIMIT 5;`;

  const { data, isLoading, error } = useQuery({
    queryKey: ['customSQL', sqlQuery],
    queryFn: runCustomSQL,
    refetchInterval: 2000,
  });

  if (isLoading) return <p>Loading logs...</p>;
  if (error) return <p>Error: {error.message}</p>;
  

  const log = Array.isArray(data) ? data[0] : data;
  
  if (!log) return <p>No log found.</p>;

  console.log(data);
  
  return;
}

export default ListLast5Logs;
